<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6sp"
    tools:context=".Quiz.MainActivity">

   <!-- android:background="@color/bg_grey"-->

    <ImageView
        android:layout_width="80dp"
        android:layout_height="59dp"
        android:layout_marginTop="1sp"
        android:src="@drawable/home_24" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="7sp"
            android:text="-------------------------"
            android:textSize="25sp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="10sp"
        android:elevation="10sp"
        android:layout_marginLeft="300sp"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="20sp"
        android:textColor="#000000"
        android:text="Time"
        android:visibility="visible" />
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10sp"
        android:layout_marginTop="100sp"
        android:elevation="10sp">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Ques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:scrollbars="none" />
    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/Back"
        android:layout_width="131dp"
        android:layout_height="87dp"
        android:layout_marginTop="664sp"
        android:layout_marginRight="200sp"
        android:src="@drawable/left_24"
        android:text="Back" />

    <ImageView
        android:id="@+id/Next"
        android:layout_width="89dp"
        android:layout_height="124dp"
        android:layout_marginLeft="270sp"
        android:layout_marginTop="654sp"
        android:src="@drawable/right_24"
        android:text="Next" />

        <Button
            android:id="@+id/cSkip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125sp"
            android:layout_marginTop="682sp"
            android:layout_marginRight="130sp"
            android:text="Skip"
            android:textSize="25sp" />



</RelativeLayout>
